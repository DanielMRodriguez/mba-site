---
import Logo from "@/components/Logo.astro";
import menu from "@/config/menu.json";

export interface ChildNavigationLink {
  name: string;
  url: string;
}

export interface NavigationLink {
  name: string;
  url: string;
  hasChildren?: boolean;
  children?: ChildNavigationLink[];
}

const { main }: { main: NavigationLink[] } = menu;
const { pathname } = Astro.url;
---

<header class="header bg-[#F3F3F3]" data-aos="fade-down">
  <nav class="navbar container">
    <!-- logo -->
    <div class="order-0">
      <a href="/">
        <img
          src="/images/home/logo-oscuro.svg"
          alt="Moder Beauty Academy"
          width={90}
          id="logo-s"
        /></a
      >
    </div>

    <div class="order-1 ml-auto flex items-center md:order-2 md:ml-0">
      <div class="menu" id="menu">
        <div class="menu__tap-1 no-ani"></div>
        <div class="menu__tap-2 no-ani"></div>
        <div class="menu__tap-3 no-ani"></div>
      </div>
    </div>
  </nav>

  <!-- Fullscreen Menu Overlay -->
  <div class="fullscreen-menu" id="fullscreen-menu">
    <div class="fullscreen-menu__content">
      <nav class="fullscreen-nav">
        <ul class="fullscreen-nav__list">
          {
            main.map((item) => (
              <li class="fullscreen-nav__item">
                {item.hasChildren ? (
                  <div class="fullscreen-nav__dropdown">
                    <span class="fullscreen-nav__link fullscreen-nav__link--parent">
                      <a href={item.url}>{item.name}</a>
                    </span>
                    <ul class="fullscreen-nav__submenu">
                      {item.children?.map((child) => (
                        <li class="fullscreen-nav__subitem">
                          <a
                            href={child.url}
                            class={`fullscreen-nav__link fullscreen-nav__link--child ${pathname === child.url ? "active" : ""}`}
                          >
                            {child.name}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </div>
                ) : (
                  <a
                    href={item.url}
                    class={`fullscreen-nav__link ${pathname === item.url ? "active" : ""}`}
                  >
                    {item.name}
                  </a>
                )}
              </li>
            ))
          }
        </ul>
      </nav>
    </div>
  </div>
</header>

<script is:inline>
  let menu = document.getElementById("menu");
  let fullscreenMenu = document.getElementById("fullscreen-menu");
  let toggleMenu = false;
  let toggleNoAni = true;

  menu.addEventListener("click", () => {
    if (toggleMenu) {
      menu.classList.remove("open");
      fullscreenMenu.classList.remove("active");
      document.body.classList.remove("menu-open");
      toggleMenu = false;
    } else {
      menu.classList.add("open");
      fullscreenMenu.classList.add("active");
      document.body.classList.add("menu-open");
      toggleMenu = true;
      if (toggleNoAni) {
        toggleNoAni = false;
        menu.childNodes.forEach((e) => {
          if (e.nodeType == 1) {
            e.classList.remove("no-ani");
          }
        });
      }
    }
  });

  // Close menu when clicking on a link
  const menuLinks = document.querySelectorAll(".fullscreen-nav__link");
  menuLinks.forEach((link) => {
    if (link.tagName === "A") {
      link.addEventListener("click", () => {
        menu.classList.remove("open");
        fullscreenMenu.classList.remove("active");
        document.body.classList.remove("menu-open");
        toggleMenu = false;
      });
    }
  });
</script>
