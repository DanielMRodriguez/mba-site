---
const { title, description, image, ctas = [], dates = [] } = Astro.props;
---

<section class="upcoming-dates">
  <div class="background-image">
    <div class="background-image__overlay"></div>
    <div
      class="background-image__img"
      style=`background-image: url('${image}')`
    >
    </div>
  </div>
  <div class="container upcoming-dates-content">
    <div class="row">
      <div class="md:col-7 col-12">
        <h2 class="text-white  mb-4">{title}</h2>
        <div class="mb-6">
          <p class="text-white">
            {description}
          </p>
        </div>
        <div class="flex gap-8 flex-wrap">
         
            {ctas.map((cta) => (
              <a class="btn btn-primary" href={cta.link}>{cta.label}</a>
            ))}
        </div>
      </div>
      <div class="md:col-5 col-12">
        <div class="upcoming-dates-list">
            {dates.map((date) => (
              <div class="upcoming-dates-list-item">
                <h3 class="text-white">âœ± {date.date}</h3>
              </div>
            ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .upcoming-dates {
    position: relative;
    padding-top: 30px;
    padding-bottom: 30px;
  }

  .upcoming-dates-content {
    position: relative;
    z-index: 4;
    padding-top: 10px;
    padding-bottom: 10px;
  }

  .background-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
  }

  .background-image__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 3;
    background-color: rgba(78, 78, 78, 0.8);
  }

  .background-image__img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  p {
    font-size: 20px;
    line-height: 26px;
  }

  .upcoming-dates-list{
    border: 3px solid #FF715E;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 10px;
    padding: 10px;
    border-radius: 10px;
    height: 100%;
  }
  .upcoming-dates-list-item h3{
    font-size: 21px;
    font-weight: 400;
    color: #fff;
    margin-bottom: 10px;
    font-family: 'Poppins', sans-serif;
  }
</style>
