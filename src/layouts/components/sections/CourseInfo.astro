---
import Video from "@/layouts/components/Video.astro";
const { info } = Astro.props;
const { title, subtitle, list } = info;
---

<section class="section course-info">
  <div class="container">
    <div class="row">
      <div class="col-12 md:col-6">
        <h2 class="mb-6 animate-slide-in-left">{title}</h2>
        <p class="mb-6 animate-slide-in-left">{subtitle}</p>
        <ul>
          {list.map((item: String) => <li class="mb-4 animate-slide-in-left">{item}</li>)}
        </ul>
      </div>

      <div class="col-12 md:col-6 course-info-video">
        <Video />
      </div>
    </div>
  </div>
</section>

<style>
  .course-info {
    background-color: #f2cece;
  }

  p {
    font-size: 20px;
  }
  ul li {
    color: #27252a;
    font-size: 17px;
  }

  .course-info-video {
    display: flex;
    align-items: center;
  }
</style>
