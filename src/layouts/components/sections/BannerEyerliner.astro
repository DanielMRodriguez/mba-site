<section class="section banner-eyerliner">
  <div class="background-image">
    <div class="background-image__overlay"></div>
    <div
      class="background-image__img"
      style="background-image: url('/images/eyeliner/eyeliner-banner.png')"
    >
    </div>
  </div>
  <div class="container banner-eyerliner-content">
    <div class="row">
      <div class="col-12">
        <h2 class="text-white text-center mb-4">Ready to Enhance Your Eyes?</h2>
        <div class="w-full md:w-1/2 mb-5 mx-auto">
          <p class="text-white text-center font-title">
            Book your eyeliner appointment today and enjoy effort less beauty
            every morning. Our technique is safe, precise, and tailored to you.
          </p>
        </div>
        <div class="text-center">
          <a class="btn btn-primary" href="/contact">Book Now</a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .banner-eyerliner {
    position: relative;
  }

  .banner-eyerliner-content {
    position: relative;
    z-index: 4;
    padding-top: 40px;
    padding-bottom: 40px;
  }

  .background-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
  }

  .background-image__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 3;
    background-color: rgba(78, 78, 78, 0.8);
  }

  .background-image__img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  p{
    font-size: 20px;
    line-height: 26px;
  }
</style>
