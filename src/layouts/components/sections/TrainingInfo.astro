---
import Video from "@/layouts/components/Video.astro";
const { info } = Astro.props;
const { title, subtitle, list, text } = info;
---

<section class="section course-info">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="w-full max-w-1/2 mx-auto"  set:html={text}></div>
      </div>
      <div class="col-12 md:col-6">
        <h2 class="mb-6">{title}</h2>
        <ul>
          {list.map((item: String) => <li class="mb-4">{item}</li>)}
        </ul>
      </div>

      <div class="col-12 md:col-6 course-info-video">
        <Video />
      </div>
    </div>
  </div>
</section>

<style>
  .course-info {
    background-color: #fff;
  }

  p {
    font-size: 20px;
  }
  ul li {
    color: #27252a;
    font-size: 17px;
  }

  h2{
    color: #DE968D;
  }

  .course-info-video {
    display: flex;
    align-items: center;
  }
</style>
