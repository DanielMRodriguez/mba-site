---
import Icon from "./Icon.astro";
const { title, subtitle, image_banner, icon , cta, cta_link} = Astro.props;
---

<header class="hero">
  <div class="background-image">
    <div class="background-image__overlay"></div>
    <div class="background-image__img" style={`background-image: url(${image_banner})`}></div>
  </div>
  <div class="container hero__content">
    <div class="row">
      <div class="col-12">
        <div class="h-24 text-white text-center" data-aos="fade-down">
          <div class="text-white inline-block">
            {icon ? <Icon name={icon} /> : null}
          </div>
        </div>
        <h1 class="text-center text-white" data-aos="fade-up" data-aos-delay="200">{title}</h1>
        <div class="hero__content-subtitle" data-aos="fade-up" data-aos-delay="400">
            <h2 class="text-center text-white">
                {subtitle}
            </h2>
        </div>
        <div class="text-center pt-5" data-aos="fade-up" data-aos-delay="600">
          {cta ? <a class="btn btn-primary" href={cta_link}>{cta}</a> : null}
        </div>
      </div>
    </div>
  </div>
</header>


<style>
  .hero {
    position: relative;
    z-index: 1;
    padding: 20px 0;
    padding-bottom:50px;
  }

  .hero__content {
    position: relative;
    z-index: 4;
  }

  .background-image{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
  }

  .background-image__overlay{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 3;
    background-color: rgba(78,78,78,0.8)
  }

  .hero__content-subtitle{
    max-width: 500px;
    margin: 0 auto;
  }

  .hero__content-subtitle h2{
    font-size: 1rem;
    font-weight: 400;
  }
  
  .background-image__img{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
</style>
