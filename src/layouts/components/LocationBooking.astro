<section class="location-booking">
  <div class="container">
    <div class="row">
      <div class="col-12 md:col-5 pt-10">
        <div>
          <span class="mb-4 block">
            <img /> BOOK NOW
          </span>
          <h3 class="mb-16">Location and Booking</h3>

          <div class="location-booking-info">
            <div class="location-booking-info-item">
              <div class="location-booking-info-item-icon">
                <img />
              </div>
              <div class="location-booking-info-item-text">
                <p>(609) 6352326</p>
              </div>
            </div>

            <div class="location-booking-info-item">
              <div class="location-booking-info-item-icon">
                <img />
              </div>
              <div class="location-booking-info-item-text">
                <p>2 S Delmorr Ave, Morrisville, PA 19067</p>
              </div>
            </div>

            <div class="location-booking-info-item">
              <div class="location-booking-info-item-icon">
                <img />
              </div>
              <div class="location-booking-info-item-text">
                <p>contact@modernbeautyaca.com</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 md:col-1"></div>

      <div class="col-12 md:col-6 p-5">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3046.9787664235328!2d-74.7749159884198!3d40.20953527135473!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c1592dc3709337%3A0x95beb44250cd4def!2sModern%20Beauty%20ACA!5e0!3m2!1ses!2smx!4v1758074006420!5m2!1ses!2smx"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </div>
  </div>
</section>

<style>
  span {
    color: #27252a;
  }

  .location-booking {
    background: transparent
      conic-gradient(from 266deg at -3% 46%, #8a8a8a 0%, #ffdfdf 100%) 0% 0%
      no-repeat padding-box;
  }

  .location-booking-info {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 20px;
  }

  .location-booking-info-item {
    display: flex;
    align-items: center;
    gap: 20px;
    border: 1px solid #27252a;
    padding: 10px;
    border-radius: 50px;
    position: relative;
  }

  .location-booking-info-item-text {
    position: relative;
    left: 60px;
  }

  .location-booking-info-item-icon {
    border-radius: 50%;
    background-color: #ff715e;
    width: 40px;
    height: 40px;
    position: absolute;
    left: 5px;
  }
  iframe {
    width: 100%;
    height: 450px;
    border: 0;
    border-radius: 15px;
  }

  @media (max-width: 768px) {
    .location-booking-info-item-text {
      p {
        font-size: 14px;
      }
    }
  }
</style>
