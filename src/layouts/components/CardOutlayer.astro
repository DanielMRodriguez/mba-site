---
const { title, description } = Astro.props;
---

<div class="card-Outlayer">
    <div class="card-Outlayer-body">
        <h3 class="text-white mb-4">{title}</h3>
        <p class="card-Outlayer-text">{description}</p>
    </div>
</div>

<style>
    .card-Outlayer {
        border: 1px solid #FF715E;
        padding: 20px;
        border-radius: 10px;
    }

    .card-Outlayer-text{
        color: white;
        font-size: 24px;
        font-family: 'Sitka Banner';
        font-weight: 400;
    }
</style>
